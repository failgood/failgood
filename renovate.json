{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "commitMessagePrefix": "[RENOVATE]",
    "packageRules": [
        {
            "matchPackagePatterns": ["org.jetbrains.kotlin"],
            "groupName": "kotlin",
            "separateMultipleMajor": true
        },
        {
            "matchPackagePatterns": ["*"],
            "excludePackagePatterns": ["org.jetbrains.kotlin"],
            "groupName": "non-kotlin dependencies",
            "groupSlug": "all-non-kotlin",
            "commitMessageTopic": "update",
            "commitMessageExtra": "{{#each updatedPackageNames}} {{.}}{{#unless @last}},{{/unless}}{{/each}}",
            "group": {
                "commitMessageTopic": "update"
            }
        }
    ],
    "separateMultipleMajor": true
}
